{
  "manifest_version": 2,
  "name": "BbCollab Poll Notifier",
  "description": "Recevez une notification d√®s la publication d'un sondage sur les classes virtuelles Blackboard Collaborate.",
  "version": "1.4",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": ["notifications"],

  "background": {
    "scripts": ["background-script.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.bbcollab.com/*"],
      "js": ["content-script.js"]
    }
  ]
}